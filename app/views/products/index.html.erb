<h1>商品列表</h1>

<%= link_to '新增商品', new_product_path, class: "btn btn-default btn-primary" %>
<%# <%= link_to '購物車', cart_path, class: "btn btn-default btn-success" %> 

<table class="table">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>售價</td>
      <td>處理</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= link_to '贊助此專案', add_cart_path(product), method: "post", class: "btn btn-default btn-danger" %>
        <%= product.title %>
      </td>
      <td><%= product.price %></td>
      <td>
        <%= link_to '編輯', edit_product_path(product), class: "btn btn-default btn-danger" %>
        <%= link_to '刪除', product, method: "delete", data: { confirm: "確定刪除?" }, class: "btn btn-default btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= render "carts/cart" %>